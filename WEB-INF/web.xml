<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
  <display-name>suigeneris</display-name>
  <description>suigeneris.org server configuration</description>
  <distributable />
  <servlet>
    <servlet-name>ssi</servlet-name>
    <servlet-class>org.suigeneris.servlet.SSIServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>mailman-cgi</servlet-name>
    <servlet-class>org.mortbay.servlet.CGI</servlet-class>
    <init-param>
      <param-name>cgibinResourceBase</param-name>
      <param-value>/var/lib/mailman/cgi-bin</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ssi</servlet-name>
    <url-pattern>*.htm</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ssi</servlet-name>
    <url-pattern>*.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ssi</servlet-name>
    <url-pattern>*.shtml</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>mailman-cgi</servlet-name>
    <url-pattern>/mailman/*</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

  <mime-mapping>
	  <extension>wmv</extension>
	  <mime-type>video/x-ms-wmv</mime-type>
  </mime-mapping>
  
  <welcome-file-list>
    <welcome-file>index.shtml</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>FrontPage</welcome-file>
  </welcome-file-list>
</web-app>
